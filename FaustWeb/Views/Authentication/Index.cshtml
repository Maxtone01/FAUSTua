@{
    ViewData["Title"] = "Реєстрація";
}
<link rel="stylesheet" href="css/authentification.css"/>
<section class="container forms">
        <div class="form login">
            <div class="form-content">
                <label for="show" class="close-btn" title="close">
                    <img src="icons/x.png">
                </label>
                <div style="font-size: 30px; color: white;">Вхід</div>
                <form action="#">
                    <div class="field input-field">
                        <input type="email" placeholder="Емейл" class="input" style="color: #8E8E8E; background-color: #19102f;">
                    </div>
                    <div class="field input-field">
                        <input type="password" placeholder="Пароль" class="password" style="color: #8E8E8E; background-color: #19102f;">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>
                    <div style="text-align: center; margin-top: 20px;">
                        <div class="forgot-pass" style="color: #8E8E8E;">або</div>
                    </div>
                    <div class="media-options">
                        <a href="#" class="field google" style="text-decoration: none;">
                            <img src="Icons/google.svg" alt="" class="google-img">
                            <span>За допомогою Google</span>
                        </a>
                    </div>
                </form>
                <div class="form-link" style="margin-top: 30px;">
                    <span>Немає акаунту? <a href="#" class="link signup-link" style="color: #513879;">Створити акаунт</a></span>
                </div>
                <div class="forgot-pass">
                    <a href="#" class="link forgot-pass-link" style="color: #513879; margin-top: 2px;">Забув пароль</a>
                </div>
                <div class="field button-field" style="margin-top: 50px;">
                    <button>Увійти</button>
                </div>
            </div>
        </div>
        <!-- Signup Form -->
        <div class="form signup">
            <div class="form-content">
                <div style="font-size: 30px; color: white;">Реєстрація</div>
                <form action="#">
                    <div class="field input-field">
                        <input type="name" placeholder="Нік" class="input" style="color: #8E8E8E; background-color: #19102f;">
                    </div>
                    <div class="field input-field">
                        <input type="email" placeholder="Емейл" class="input" style="color: #8E8E8E; background-color: #19102f;">
                    </div>
                    <div class="field input-field">
                        <input type="password" placeholder="Пароль" class="password" style="color: #8E8E8E; background-color: #19102f;">
                    </div>
                    <div class="field input-field">
                        <input type="password" placeholder="Повторіть пароль" class="password" style="color: #8E8E8E; background-color: #19102f;">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>
                </form>
                <div class="form-link">
                    <span>Маєте акаунт? <a href="#" class="link login-link" style="color: #513879;">Зайти</a></span>
                </div>
            </div>
            <div style="text-align: center; margin-top: 20px;">
                <div class="forgot-pass" style="color: #8E8E8E;">або</div>
            </div>
            <div class="media-options">
                <a href="#" class="field google" style="text-decoration: none;">
                    <img src="Icons/google.svg" alt="" class="google-img">
                    <span>За допомогою Google</span>
                </a>
            </div>
            <div class="field button-field">
                <button>Увійти</button>
            </div>
        </div>
        <!-- Popup Form -->
        <div class="form pass-reset-popup">
            <div class="form-content">
                <label for="show" class="close-btn" title="close">
                    <img src="Icons/x.png">
                </label>
                <div style="font-size: 30px; color: white; font-size: 24px;">Перевіряйте свою поштову скриньку!</div>
                <div style="font-size: 30px; color: #878787; margin-top: 30px; font-size: 16px; width: 350px;">Ми надіслали вам 
                    електронний лист із підтвердженням особи, щоб відновити пароль. Якщо листа немає - перевірте "Спам"</div>
            </div>
        </div>
        <!-- Pass Reset Form -->
        <div class="form pass-reset">
            <div class="form-content">
                <label for="show" class="close-btn" title="close">
                    <img src="Icons/x.png">
                </label>
                <div style="font-size: 30px; color: white; font-size: 24px;">Відновленя паролю</div>
                <div style="font-size: 30px; color: white; margin-top: 30px; font-size: 16px; width: 350px;">Введіть свій емейл, щоб отримати підтверження на відновлення паролю</div>
                <form action="#">
                    <div class="field input-field">
                        <input type="email" placeholder="Емейл" class="input" style="color: #8E8E8E; 
                        background-color: #19102f;
                        border-radius: 15px;
                        height: 50px;
                        margin-top: -20px;">
                    </div>
                    <div class="field button-field" style="margin-top: 20px;">
                        <button>Відправити</button>
                    </div>
                </form>
            </div>
            </div>
    </section>
    <!-- JavaScript -->
    <script src="js/sign.js"></script>